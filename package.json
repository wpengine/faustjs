{
  "name": "root",
  "private": true,
  "workspaces":{
    "packages": [
      "packages/core",
      "packages/react",
      "packages/next",
      "examples/next/getting-started",
      "examples/react/getting-started"
    ]
  },
  "scripts": {
    "build": "npm run build --workspace=@wpengine/headless-core --workspace=@wpengine/headless-react --workspace=@wpengine/headless-next",
    "build:core": "npm run build --workspace=@wpengine/headless-core",
    "build:next": "npm run build --workspace=@wpengine/headless-next",
    "build:react": "npm run build --workspace=@wpengine/headless-react",
    "clean": "npm run clean --workspace=@wpengine/headless-core --workspace=@wpengine/headless-react --workspace=@wpengine/headless-next",
    "clean:examples": "rimraf examples/**/node_modules",
    "lint": "npm run lint --workspace=@wpengine/headless-core --workspace=@wpengine/headless-react --workspace=@wpengine/headless-next",
    "lint:fix": "npm run lint:fix --workspace=@wpengine/headless-core --workspace=@wpengine/headless-react --workspace=@wpengine/headless-next",
    "dev": "npm run dev:next:getting-started",
    "dev:next:getting-started": "npm run dev ---workspace=examples/next/getting-started",
    "test": "npm test --workspace=@wpengine/headless-core --workspace=@wpengine/headless-react --workspace=@wpengine/headless-next",
    "wp-env": "wp-env",
    "wp:start": "wp-env start",
    "wp:stop": "wp-env stop",
    "wp:destroy": "wp-env destroy"
  },
  "devDependencies": {
    "@wordpress/env": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}

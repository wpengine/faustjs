{
  "name": "root",
  "private": true,
  "workspaces":{
    "packages": [
      "packages/core",
      "packages/react",
      "packages/next",
      "examples/next/getting-started",
      "examples/react/getting-started"
    ]
  },
  "scripts": {
    "build": "npm run build -workspace=packages/core -workspace=packages/react -workspace=packages/next",
    "clean": "npm run clean -workspace=packages/core -workspace=packages/react -workspace=packages/next",
    "clean:examples": "rimraf examples/**/node_modules",
    "lint": "npm run lint -workspace=packages/core -workspace=packages/react -workspace=packages/next",
    "lint:fix": "npm run lint:fix -workspace=packages/core -workspace=packages/react -workspace=packages/next",
    "dev:next:getting-started": "npm run dev --workspace=examples/next/getting-started",
    "test": "npm test -workspace=packages/core -workspace=packages/react -workspace=packages/next",
    "wp-env": "wp-env",
    "wp:start": "wp-env start",
    "wp:stop": "wp-env stop",
    "wp:destroy": "wp-env destroy"
  },
  "devDependencies": {
    "@wordpress/env": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}
